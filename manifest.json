{
  "name": "Lazy Troll Blocker",
  "version": "0.2.0",
  "description": "Automatically block Twitter accounts from lazy trolls",
  "manifest_version": 2,

  "content_scripts": [{
    "js": [
      "jquery-3.3.1.min.js",
      "content.js"
    ],
    "matches": ["https://*.twitter.com/*"],
    "run_at": "document_end",
    "all_frames": true
  }],
  "permissions": [
    "https://*.twitter.com/*"
  ]
}